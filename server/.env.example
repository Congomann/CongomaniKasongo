# Database - CHANGE PASSWORD FOR PRODUCTION
DATABASE_URL="postgresql://user:CHANGE_THIS_STRONG_PASSWORD@localhost:5432/nhfg_crm?schema=public"

# Server
PORT=5000
NODE_ENV=production

# JWT - MUST GENERATE SECURE SECRET FOR PRODUCTION
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERATE_A_SECURE_RANDOM_64_CHAR_SECRET_KEY_HERE
JWT_EXPIRES_IN=7d

# CORS - Comma-separated list of allowed origins
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Gemini AI API Key (Optional - for AI features)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
